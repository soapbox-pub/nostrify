{
  "$schema": "https://deno.land/x/deno@v1.41.0/cli/schemas/config-file.v1.json",
  "lock": false,
  "name": "@soapbox/nspec",
  "version": "0.8.1",
  "exports": "./mod.ts",
  "tasks": {
    "test": "deno test --allow-net",
    "check": "deno check mod.ts",
    "npm": "deno run -A scripts/npm.ts"
  },
  "exclude": ["npm"],
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
