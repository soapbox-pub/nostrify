{
  "tasks": {
    "test": "deno test -A --junit-path=./deno-test.xml",
    "check": "deno check packages/**/*.ts",
    "react:dev": "npx vite packages/react/example",
    "docs:dev": "deno task --cwd docs dev",
    "docs:build": "deno task --cwd docs build"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "unstable": [
    "ffi",
    "kv"
  ],
  "private": true,
  "dependencies": {
    "@scure/base": "jsr:^1.2.4",
    "@std/assert": "jsr:^0.222.1",
    "@std/encoding": "jsr:^0.224.1",
    "@std/json": "jsr:^1.0.1",
    "@std/streams": "jsr:^1.0.8",
    "@std/testing": "jsr:^0.222.1",
    "lerna": "^8.2.3",
    "lru-cache": "^10.2.0",
    "mock-socket": "9.3.1",
    "nostr-tools": "^2.13.0",
    "websocket-ts": "^2.2.1",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "devDependencies": {
    "turbo": "^2.5.5"
  }
}
