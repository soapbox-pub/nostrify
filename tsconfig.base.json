{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "lib": [
      "dom",
      "ESNext",
      "ES2024",
      "ES2024.ArrayBuffer"
    ],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "skipLibCheck": true,
    "target": "esnext",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  }
}